<!DOCTYPE html>
<html>
<head>
  <title>ClixoUs</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
	<body>
		<% if flash[:notice] %>
			<p class="flash-notice"><%= flash[:notice] %></p>
		<% else flash[:error] %>
			<p class="flash-error"><%= flash[:error] %></p>
		<% end %>

		<%= yield %>

	</body>
</html>
